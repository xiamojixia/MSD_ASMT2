/* pages/user/user.wxss */
/*整体样式*/
.containter{
  display: flex;
  flex-direction: row;
}
/*文字样式*/
.texts .text{
  margin-top: 20rpx;
  margin-left: 70rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  flex-direction: column;
}

/*整体样式*/
.top{
  display: flex;
  flex-direction:column;
}
/*右侧图片样式*/
.top image{
  margin-top: 20rpx;
  margin-left: 50rpx;
  width:200rpx;
  height: 200rpx;
}
/*左侧按钮样式*/
.top .button1{
  margin: 20rpx 8rpx auto 50rpx;
}
/*右侧按钮样式*/
.button2{
  margin: 0rpx 8rpx auto 100rpx;
  margin-top: 10rpx;
}

/*分割线1样式*/
.reason1{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-weight:700;
  font-size: 32rpx;
  color: #333333;
  display: table;
  width: auto;
  white-space: nowrap;
  border-spacing: 0.5rem 0;
  margin-left:28rpx;
  margin-right:28rpx;
}

.reason1::before,.reason1::after{
  display: table-cell;
  content:"";
  width :50%;
  background:linear-gradient(#ccc,#ccc) repeat-x center;
  background-size: 0.1rem 0.1rem;
}

.tset{
  display: flex;
  flex-direction: row-reverse;
}

.reason2{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-weight:700;
  font-size: 32rpx;
  color: #333333;
  display: table;
  width: auto;
  white-space: nowrap;
  border-spacing: 0.5rem 0;
  margin-left:28rpx;
  margin-right:28rpx;
}
.reason2::before,.reason2::after{
  display: table-cell;
  content:"";
  width :50%;
  background:linear-gradient(#ccc,#ccc) repeat-x center;
  background-size: 0.1rem 0.1rem;
}

